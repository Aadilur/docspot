# Backend example env
# Local dev only. On Railway, DO NOT set PORT manually.
PORT=3001

# =========================
# Database (Postgres)
# =========================
# Provide DATABASE_URL (e.g. Railway provides this automatically)
DATABASE_URL=

# =========================
# Object storage (S3-compatible)
# =========================
S3_ENDPOINT=
S3_REGION=auto
S3_BUCKET=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# Most S3-compatible providers work best with path-style URLs on custom endpoints
S3_FORCE_PATH_STYLE=true
